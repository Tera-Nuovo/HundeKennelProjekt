<Window x:Class="HundekennelWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HundekennelWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920
        ">
    <Grid Margin="0,0,0,-6">
        <ScrollViewer Margin="1146,95,55,94">
            <ListBox  ItemsSource="{Binding DLMan.CurentDogList}" x:Name="DogsDisplay" Margin="0,0,0,0" Width="709" FontSize="24"/>
        </ScrollViewer>
        <Rectangle HorizontalAlignment="Left" Margin="1146,94,0,94" Stroke="Black" Width="719"/>
        <TextBox x:Name="HD_IndexInputMax" HorizontalAlignment="Left" Margin="156,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="260" Height="39" FontSize="24" TextChanged="TextBox_TextChanged"/>


        <Label Content="HD-Index Max" HorizontalAlignment="Left" Margin="156,118,0,0" VerticalAlignment="Top" FontSize="24" Height="37" FontWeight="Bold"/>
        <Label Content="Dogs Data" HorizontalAlignment="Left" Margin="1146,36,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold"/>
        <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Left" Margin="396,536,0,0" VerticalAlignment="Top" Height="46" Width="134" FontSize="24" Click="SearchButton_Click"/>
        <TextBox x:Name="HD_IndexInputMin" HorizontalAlignment="Left" Margin="520,155,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="260" Height="39" FontSize="24" TextChanged="TextBox_TextChanged"/>
        <Label Content="HD-Index Min" HorizontalAlignment="Left" Margin="520,118,0,0" VerticalAlignment="Top" FontSize="24" Height="37" FontWeight="Bold"/>
        <Label Content="Dog Gender Male(H), Female(T)" HorizontalAlignment="Left" Margin="161,324,0,0" VerticalAlignment="Top" FontSize="24" Height="41" FontWeight="Bold"/>
        <ComboBox x:Name="DogGender" HorizontalAlignment="Left" Margin="161,375,0,0" VerticalAlignment="Top" Width="260" Height="39" FontSize="24">
            <ComboBoxItem IsSelected="True">Gender</ComboBoxItem>
            <ComboBoxItem>H</ComboBoxItem>
            <ComboBoxItem>T</ComboBoxItem>
        </ComboBox>
        <ComboBox x:Name="Dogsorting_priority" HorizontalAlignment="Left" Margin="605,375,0,0" VerticalAlignment="Top" Width="260" Height="39" FontSize="24">
            <ComboBoxItem IsSelected="True" Content="Sorting priority"/>
            <ComboBoxItem Content="hf"/>
            <ComboBoxItem Content="lf"/>
        </ComboBox>
    </Grid>
</Window>
